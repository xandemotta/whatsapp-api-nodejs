{
  "apps": [
    {
      "name": "api-whatsapp-nova",
      "script": "./src/server.js",
      "interpreter": "node",
      "instances": 1,
      "exec_mode": "fork",
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "512M",
      "env": {
        "NODE_ENV": "production",
        "NODE_OPTIONS": "--enable-source-maps --dns-result-order=ipv4first",
        "PORT": 3333
      },
      "error_file": "/root/.pm2/logs/api-whatsapp-nova-error.log",
      "out_file": "/root/.pm2/logs/api-whatsapp-nova-out.log",
      "merge_logs": true,
      "time": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss"
    }
  ]
}
